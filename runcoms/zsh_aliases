# general aliases
alias e="exit"

# git aliases
alias ga="git add ."
alias gc="git commit"
alias gp="git push"
alias gpu="git pull"
alias gf="git fetch"
alias gfup="git fetch upstream"
alias gm="git merge"

# Docker aliases
alias dk="docker"
alias dke="docker exec"
alias dkr="docker run"
alias dkrm="docker rm"
alias dkb="docker build"
alias dkp="docker pull"
alias dkps="docker ps -a"
alias dki="docker images"

# Modern tool aliases
alias bat="batcat -p --paging never"
alias ls="exa"

# Python aliases
alias ptpy="ptpython"
alias bpy="bpython"

